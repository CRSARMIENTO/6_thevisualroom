int search(string numbers[], int size, string value)
{

	bool exit = false;
	int pos = 0;
	while(!exit)
	{
		if(numbers[pos] == value)
		{
			exit = true;
		}
		else if(pos + 1 == size)
		{
			pos = -1;
			exit = true;
		}
		else
		{
			pos = pos + 1;
		}
	}
	return pos;
}


